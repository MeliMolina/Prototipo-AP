<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estadisticas_por_lugar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.ediloaz.control07.Estadisticas.Activity_Estadisticas_Por_Lugar">

    <include layout="@layout/dashboard"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <!--Espacio en el top-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/text_MedicoBuscar_title"
                android:text="Estadísticas de enfermedades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:paddingLeft="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:paddingLeft="34dp"
                android:paddingRight="34dp"
                android:layout_marginTop="19dp"
                >

                <TextView
                    android:text="Buscar estadísticas por provincia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_Nombre"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="0dp"/>
                />

            </LinearLayout>

            <!--Título LISTA DE PACIENTES y botones NUEVO y BUSCAR-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left|center_vertical"
                    >
                    <!--Buscar-->
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_nombre_Paciente_list"
                        android:layout_weight="1"
                        android:entries="@array/country_arrays"
                        android:prompt="@string/country_prompt"
                        android:layout_marginLeft="20dp"

                        />
                    <Button
                        android:id="@+id/button_Buscar_Citas"
                        android:background="@drawable/button_blue"
                        android:textColor="#FFFFFF"
                        android:text="@string/button_buscar"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:layout_marginLeft="30dp"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </ScrollView>

</LinearLayout>
